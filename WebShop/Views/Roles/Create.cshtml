
@{
    ViewData["Title"] = "Новая роль";
}

<div class="bg">
    <h2 class="title text-center">Новая роль</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="employee-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="name">Новая роль</label>
                    <input name="name" class="input_text"/>
                </div>
                <button type="submit">Добавить</button>
            </form>
        </div>
    </div>
</div>

<div style="margin-top:15px;">
    <a asp-action="Index" asp-controller="Roles" class="a-link">К списку ролей</a>
</div>

