@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Список ролей";
}

<div class="bg">
    <h2 class="title text-center">Список ролей</h2>
</div>

<p>
    <a asp-action="Create" asp-controller="Roles" class="btn btn-primary">Новая роль</a>
</p>

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                <a href="#" class="a-link">Удалить</a>
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="Index" asp-controller="Users" class="a-link">Назад к списку пользователей</a>
</div>


