@model WebShop.Models.Account.RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <h2>Вход</h2>
                    <form asp-action="Login">
                        <input asp-for="UserName" placeholder="Name" />
                        <input asp-for="Password" placeholder="Password"/>
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить
                        </span>
                        <button type="submit" class="btn btn-default">Войти</button>
                    </form>
                </div>
            </div>
            <div class="col-sm-1">
                <h2 class="or">ИЛИ</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация пользователя</h2>
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserName" placeholder="Имя"/>
                        <input asp-for="Password" placeholder="Пароль"/>
                        <input asp-for="ConfirmPassword" placeholder="Подтверждение пароля"/>
                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

