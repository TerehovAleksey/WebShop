@model WebShop.Domain.Models.Account.LoginUserViewModel

@{
    ViewData["Title"] = "Форма входа";
}

<div class="bg">
    <h2 class="title text-center">Форма входа</h2>
</div>

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="login-form">
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" placeholder="Имя пользователя"/>
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Пароль" />
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить?
                        </span>
                        <button type="submit" class="btn btn-default">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

