@model WebShop.Domain.Models.Account.RegisterUserViewModel

@{
    ViewData["Title"] = "Форма регистрации";
}

<div class="bg">
    <h2 class="title text-center">Форма регистрации</h2>
</div>

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <form asp-action="Register">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" placeholder="Имя пользователя" />
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Пароль" />
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" placeholder="Подтверждение пароля" />
                        <button type="submit" class="btn btn-default">Регистрация</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


