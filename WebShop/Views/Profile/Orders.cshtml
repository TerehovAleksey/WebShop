@using WebShop.Models.Order
@model IEnumerable<UserOrderViewModel>
@{
    ViewData["Title"] = "Мои заказы";
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
}

<h2>Мои заказы</h2>

<table class="table">
    <tr>
        <th>Номер</th>
        <th>Имя</th>
        <th>Адрес</th>
        <th>Телефон</th>
        <th>Сумма заказа</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.TotalSum</td>
        </tr>
    }
</table>

