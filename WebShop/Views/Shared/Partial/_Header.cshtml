<header id="header">
    <!--header-->
    <div class="header_top">
        <!--header_top-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contactinfo">
                        <ul class="nav nav-pills">
                            <li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="social-icons pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->

    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="logo pull-left">
                        <a asp-controller="Home" asp-action="Index" is-active-route><img src="~/images/home/logo.png" alt="" /></a>
                    </div>
                    <div class="btn-group pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                USA
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Canada</a></li>
                                <li><a href="#">UK</a></li>
                            </ul>
                        </div>

                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                DOLLAR
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Canadian Dollar</a></li>
                                <li><a href="#">Pound</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            <li><a asp-controller="Employee" asp-action="Index" is-active-route>Сотрудники</a></li>
                            <li><a asp-controller="Users" asp-action="Index" is-active-route><i class="fa fa-user"></i> Пользователи</a></li>
                            <li><a href="#"><i class="fa fa-star" is-active-route></i> Wishlist</a></li>
                            <li><a asp-controller="Home" asp-action="CheckOut" is-active-route><i class="fa fa-crosshairs"></i> Checkout</a></li>
                        </ul>
                    </div>
                </div>
                @*корзина*@
                <div class="col-sm-1">
                    <div class="pull-right">
                        @await Component.InvokeAsync("Cart")
                    </div>                  
                </div>
                @*аккаунт*@
                <div class="col-sm-3  pull-right">
                    @await Component.InvokeAsync("LoginLogout")
                </div>
            </div>
        </div>
    </div><!--/header-middle-->

    <div class="header-bottom">
        <!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li><a asp-controller="Home" asp-action="Index" is-active-route>Home</a></li>
                            <li class="dropdown">
                                <a href="#">Shop<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li><a asp-controller="Catalog" asp-action="Shop" is-active-route>Товары</a></li>
                                    <li><a asp-controller="Home" asp-action="ProductDetails" is-active-route>Product Details</a></li>
                                    <li><a asp-controller="Home" asp-action="CheckOut" is-active-route>Checkout</a></li>
                                    <li><a asp-controller="Cart" asp-action="Details" is-active-route>Корзина</a></li>
                                    <li><a asp-controller="Account" asp-action="Login" is-active-route>Аккаунт</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#">Blog<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li><a asp-controller="Home" asp-action="Blog" is-active-route>Blog List</a></li>
                                    <li><a asp-controller="Home" asp-action="BlogSingle" is-active-route>Blog Single</a></li>
                                </ul>
                            </li>
                            <li><a asp-controller="Home" asp-action="PageNotFound" is-active-route>404</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUs" is-active-route>Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="search_box pull-right">
                        <input type="text" placeholder="Search" />
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
</header><!--/header-->